<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:transmogrifier="http://namespaces.plone.org/transmogrifier"
    i18n_domain="org.bccvl">

    <!-- mapwidget interferes with add form registration
         there is a very generic view registration for
collective.geo.mapwidget.browser.widgets.MapWidgets which
overrides anything else in a stacked component registry scenario -->
    <exclude package="collective.geo.mapwidget"/>
    <!-- also exclude mapwidget dependencies -->
    <exclude package="collective.geo.contentlocations"/>
    <exclude package="collective.z3cform.mapwidget"/>
    <exclude package="collective.geo.kml"/>

    <include package="plone.app.caching"/>
    <include package="plone.app.folderui"/>
    <include package="org.bccvl.site"/>

    <includeOverrides package="org.bccvl.site" file="overrides.zcml"/>

    <genericsetup:registerProfile
        name="testing"
        title="BCCVL Site Testing Profile"
        directory="profile"
        description="Setup BCCVL Site."
        provides="Products.GenericSetup.interfaces.EXTENSION"
    />

</configure>
