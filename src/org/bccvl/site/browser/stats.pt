<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

<metal:content-body fill-slot="body">
    <div id="content">
        <table class="stats">
            <tr class="stats_header">
                <td colspan="2">Users</td>
            </tr>
            <!--<tr>-->
                <!--<td>New (past 3 months)</td>-->
                <!--<td tal:content="view/users_new" />-->
            <!--</tr>-->
            <tr>
                <td>Active (past 90 days)</td>
                <td tal:content="view/users_active" />
            </tr>
            <tr>
                <td>Total</td>
                <td tal:content="view/users_total" />
            </tr>
            
            <tr class="blank_row" />

            <tr class="stats_header">
                <td>Institution</td><td>Users</td>
            </tr>
            <tr tal:repeat="institution view/institutions">
                <td tal:content="python: institution[0]" />
                <td tal:content="python: institution[1]" />
            </tr>
            
            <tr class="blank_row" />
            
            <tr class="stats_header">
                <td>Datasets</td>
            </tr>
            <tr>
                <td>Total Datasets Added</td>
                <td tal:content="view/datasets_added" />
            </tr>
            <tr>
                <td>Local Datasets</td>
                <td tal:content="view/datasets_added_local" />
            </tr>
            <tr>
                <td>Remote Datasets</td>
                <td tal:content="view/datasets_added_remote" />
            </tr>
            <tr>
                <td>Added By Users</td>
                <td tal:content="view/datasets_added_users" />
            </tr>
            <tr>
                <td>Datasets Generated</td>
                <td tal:content="view/datasets_generated" />
            </tr>
            
            <tr class="blank_row" />
            
            <tr class="stats_header">
                <td colspan="2">Experiments</td>
            </tr>
            <tr tal:repeat="exp_type view/experiment_types">
                <td tal:content="python: exp_type[0]" />
                <td tal:content="python: exp_type[1]" />
            </tr>
            <tr>
                <td>Total Experiments</td>
                <td tal:content="view/experiments_run" />
            </tr>
            <tr>
                <td>Jobs Run</td>
                <td tal:content="view/jobs" />
            </tr>
            <tr>
                <td>Published</td>
                <td tal:content="view/experiments_published" />
            </tr>
            
            <tr class="blank_row" />
            
        </table>
    </div>
</metal:content-body>
</body>
</html>
