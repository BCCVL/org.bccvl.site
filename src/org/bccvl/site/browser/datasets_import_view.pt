<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

<metal:content-core fill-slot="body">

    <ul class="contentTabs">
        <li class="contentTab firstContentTab">
            <a id="datasets-listing"
               href="#"
               tal:attributes="href string:${context/absolute_url}"><span>My Datasets</span></a>
        </li>
        <li class="contentTab">
            <a id="datasets-import"
               href="#" class="selected"
               tal:attributes="href string:${context/absolute_url}/datasets_import_view"><span>Import Dataset</span></a>
        </li>
        <li class="contentTab lastContentTab">
            <a id="datasets-upload"
               href="#"
               tal:attributes="href string:${context/absolute_url}/datasets_upload_view"><span>Upload Dataset</span></a>
        </li>
    </ul>

    <div class="bccvl-add-datasets tab-pane active" id="tab-find">
        <div class="row-fluid">
	    <div class="span6 offset3">

                <div id="searchOccurrence" class="bccvl-search-form form-inline">
                    <input name="searchOccurrence_query" type="text"
                           class="span8" placeholder="Find more species..."
                           autocomplete="off"/>
                    <select name="searchOccurrence_source" class="span4">
                       <option value="ala">at ALA</option>
                    </select>
                    <p class="bccvl-labelfade-description bccvl-read"></p>

                    <img src="/bccvl/++theme++org.bccvl.theme/images/big-ajax-loader.gif" class="bccvl-results-spinner"/>
                    <div id="searchOccurrence_results" class="bccvl-searchform-results"></div>
                </div>
            </div>

        </div>
    </div>
</metal:content-core>

</body>
</html>
