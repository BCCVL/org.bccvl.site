<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="plone.app.dexterity"
      tal:omit-tag=""
      tal:define="dummy python:request.response.setHeader('X-Theme-Disabled', 'True');">
  <tal:repeat tal:repeat="item view/datasets">
    <div class="selecteditem"
         tal:define="context item/getObject;
                     owner context/getOwner;
                     user owner/getUserName;
                     ">
      <input type="hidden" value="" class="required" name="form.widgets.species_occurrence_dataset"
             tal:attributes="value item/UID;
                             name view/widgetname"/>
      <a class="btn btn-mini" href="#"><i class="icon-remove"></i></a>
      <span class="selected-option"
            tal:content="item/Title">Species</span>
  </div>
  </tal:repeat>
</html>
