<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="">
<div class="ordered-selection-field" id=""
     tal:attributes="id view/id"
     tal:define="class view/klass;
                 selected view/selectedItems">
   <!-- view/notselectedItems -->
   <!-- view/selectedItems -->
   <tal:repeat tal:repeat="entry view/items">
    <span class="option">
    <input type="checkbox" name="vehicle" value="Bike" id="mybox" class="foo"
           tal:attributes="id entry/id;
                           name string:${view/name};
                           value entry/value;
                           class class;
                           checked python: entry in selected and 'checked' or None"/>
    <label for="mybox" tal:content="nocall: entry/content"
           tal:attributes="for entry/id;">Label</label>
    </span>
   </tal:repeat>

  <input name="foo-empty-marker" type="hidden"
        tal:attributes="name string:${view/name}-empty-marker"/>

</div>

</html>
