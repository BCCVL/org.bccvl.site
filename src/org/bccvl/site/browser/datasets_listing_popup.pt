<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone.z3cform"
      tal:define="plone_view context/@@plone;
                  normalizeString nocall: context/plone_utils/normalizeString;
                  toLocalizedTime nocall: context/@@plone/toLocalizedTime;
                  site_properties context/portal_properties/site_properties;
                  use_view_action site_properties/typesUseViewActionInListings|python:();
                  pas_member context/@@pas_member;
                  isAnon context/@@plone_portal_state/anonymous;
                  show_about python:not isAnon or site_properties.allowAnonymousViewAbout;
                  dummy python:request.response.setHeader('X-Theme-Disabled', 'True');

                  dataset_tools nocall:context/@@dataset_tools;

                  navigation_root_url context/@@plone_portal_state/navigation_root_url;

                  filters python:request.get('datasets.filters', ());
                  multiple python:request.get('datasets.multiple', '');
                  "
      tal:omit-tag="">


  <div class="row">
    <form id="datasets-popup-searchform" action="" method="GET"
          tal:define="context_state context/@@plone_context_state"
          tal:attributes="action context_state/current_base_url">
      <input type="hidden" name="datasets.filters:list" value=""
             tal:attributes="value val"
             tal:repeat="val filters"/>
      <input type="hidden" name="datasets.multiple" value=""
             tal:attributes="value multiple"/>
      <div class="cell position-0 width-4"
           tal:condition="python: 'text' in filters">
        <input id="datasets-filter-text"
               name="datasets.filter.text" type="text"
               placeholder="Search Datesets" class="input-medium"
               tal:attributes="value python:request.get('datasets.filter.text')"/>
        <input name="datasets.filter.genre:list" type="hidden"
               tal:attributes="value genre"
               tal:repeat="genre python:request.get('datasets.filter.genre')"/>
        <button class="btn" type="submit">Go!</button>
      </div>
      <div class="cell position-4 width-4"
           tal:condition="python: 'source' in filters">
        <select id="datasets-filter-source"
                name="datasets.filter.source:list"
                multiple="multiple">
          <option disabled="disabled">Select a Source</option>
          <option value="optionvalue"
                  tal:repeat="opt dataset_tools/source_list"
                  tal:attributes="selected opt/selected;
                                  disabled opt/disabled;
                                  value opt/token;"
                  tal:content="opt/label">Option label</option>
        </select>
      </div>
      <div class="cell position-8 width-4"
           tal:condition="python: 'layer' in filters">
        <select id="datasets-filter-layer"
                name="datasets.filter.layer:list"
                multiple="multiple">
          <option disabled="disabled">Select Layers</option>
          <option value="layerid"
                  tal:repeat="opt dataset_tools/layer_list"
                  tal:attributes="selected opt/selected;
                                  disabled opt/disabled;
                                  value opt/token;"
                  tal:content="opt/label">Layer title</option>
        </select>
      </div>
      <input type="hidden" name="datasets.filter.layer:list" value=""
             tal:condition="python: 'layer' not in filters"
             tal:attributes="value val"
             tal:repeat="val python:request.get('datasets.filter.layer',())"/>
      <div class="cell position-12 width-4"
           tal:condition="python: 'resolution' in filters">
        <select id="datasets-filter-resolution"
                name="datasets.filter.resolution:list"
                multiple="multiple">
          <option disabled="disabled">Select Resolution</option>
          <option value="resolutionid"
                  tal:repeat="opt dataset_tools/resolution_list"
                  tal:attributes="selected opt/selected;
                                  disabled opt/disabled;
                                  value opt/token;"
                  tal:content="opt/label">Resolution title</option>
        </select>
      </div>
      <input type="hidden" name="datasets.filter.resolution:list" value=""
             tal:condition="python: 'resolution' not in filters"
             tal:attributes="value val"
             tal:repeat="val python:request.get('datasets.filter.resolution',())"/>
      <div class="cell position-16 width-4"
           tal:condition="python: 'emsc' in filters">
        <select id="datasets-filter-emsc"
                name="datasets.filter.emsc:list"
                multiple="multiple">
          <option disabled="disabled">Select Emission Scenario</option>
          <option value="emscid"
                  tal:repeat="opt dataset_tools/emsc_list"
                  tal:attributes="selected opt/selected;
                                  disabled opt/disabled;
                                  value opt/token;"
                  tal:content="opt/label">Emsc title</option>
        </select>
      </div>
      <div class="cell position-20 width-4"
           tal:condition="python: 'gcm' in filters">
        <select id="datasets-filter-gcm"
                name="datasets.filter.gcm:list"
                multiple="multiple">
          <option disabled="disabled">Select Global Climate Model</option>
          <option value="gcmid"
                  tal:repeat="opt dataset_tools/gcm_list"
                  tal:attributes="selected opt/selected;
                                  disabled opt/disabled;
                                  value opt/token;"
                  tal:content="opt/label">Gcm title</option>
        </select>
      </div>

    </form>
  </div>
  <div id="datasets-popup-result"
       tal:define="batch view/datasetslisting">
    <div id="datasets-popup-result-list">
      <div class="row" tal:condition="batch">
        <div class="cell position-1">
          <div metal:use-macro="context/batch_macros/macros/navigation" />
        </div>
      </div>
      <tal:repeat tal:repeat="item batch">
        <!-- non layered datasets -->
        <div class="row"
             tal:condition="python: 'layer' not in filters"
             tal:attributes="data-uuid item/UID"
             tal:define="item_title_or_id item/pretty_title_or_id;
                         item_icon python:plone_view.getIcon(item);
                         item_creator item/Creator;
                         item_modified item/ModificationDate;
                         item_description item/Description;
                         ">
          <div class="cell position-0 width-1">
            <input type="radio" name="selected-layer"
                   tal:attributes="value string:select-${item/UID};
                                   type python: 'checkbox' if multiple=='multiple' else 'radio'" />
          </div>
          <div class="cell position-1">
            <p tal:content="item_title_or_id">Item Title</p>
            <p tal:content="item_description">Item description</p>
            <p>Creator: <span tal:condition="item_creator"
            tal:define="author python:pas_member.info(item_creator)"
            tal:content="author/name_or_id">Bob Dobalina</span>
            Modified: <span tal:content="python:toLocalizedTime(item_modified,long_format=1)">August 16, 2001 at 23:35:59</span>
            </p>
          </div>
        </div>
        <!-- layered datasets -->
        <div class="row"
             tal:condition="python: 'layer' in filters"
             tal:attributes="data-uuid item/UID;
                             data-layer layer/token"
             tal:define="item_title_or_id item/pretty_title_or_id;
                         item_icon python:plone_view.getIcon(item);
                         item_creator item/Creator;
                         item_modified item/ModificationDate;
                         item_description item/Description;
                         md python:dataset_tools.metadata(item);
                         "
             tal:repeat="layer python:view.match_selectedlayers(md)">
          <div class="cell position-0 width-1">
            <input type="checkbox" name="selected-layer"
                   tal:attributes="value string:select-${item/UID}" />
          </div>
          <div class="cell position-1">
            <p tal:content="item_title_or_id">Item Title</p>
            <p tal:content="item_description">Item description</p>
            <p tal:content="layer/title">Layer title</p>
            <p>Creator: <span tal:condition="item_creator"
            tal:define="author python:pas_member.info(item_creator)"
            tal:content="author/name_or_id">Bob Dobalina</span>
            Modified: <span tal:content="python:toLocalizedTime(item_modified,long_format=1)">August 16, 2001 at 23:35:59</span>
            </p>
          </div>
        </div>
      </tal:repeat>
      <div class="row" tal:condition="batch">
        <div class="cell position-1">
          <div metal:use-macro="context/batch_macros/macros/navigation" />
        </div>
      </div>
      <div class="row"
           tal:condition="not:batch">
        <div class="cell position-1">
          <p>No Datasets found</p>
        </div>
      </div>
    </div>
  </div>
</html>
